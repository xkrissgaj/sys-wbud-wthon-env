{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker: Python - Weather Requester",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-build",
            "platform": "python",
            "program": "weather_requester.py",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/app"
                    }
                ]
            }
        }
    ]
}
